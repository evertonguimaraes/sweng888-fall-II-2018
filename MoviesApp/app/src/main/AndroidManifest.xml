<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="movies.sweng888.psu.edu.moviesapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">
        <activity android:name=".activity.MainActivity"></activity>
        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/category_activity">
        </activity>
        <activity android:name=".activity.NewReleaseActivity" />
        <activity android:name=".activity.RatingActivity" />
        <activity android:name=".activity.ClassificationActivity" />
        <activity
            android:name=".activity.MovieDetailsActivity"
            android:label="@string/label_details_movie" />
        <activity android:name=".activity.LoginActivity" android:label="@string/act_login_msg">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>